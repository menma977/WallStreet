<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/card2"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingTop="20sp"
        android:paddingEnd="10dp"
        android:paddingBottom="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="380dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginBottom="10sp"
          android:gravity="center_vertical"
          android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/icon"
            app:srcCompat="@mipmap/ic_launcher_foreground" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/upgrade" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10sp"
          android:gravity="center_vertical"
          android:orientation="horizontal">

        <TextView
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:text="currency" />

        <Spinner
            android:id="@+id/currency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_weight="1"
            android:entries="@array/currency_choice"
            android:spinnerMode="dialog" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="10sp"
          android:gravity="center_vertical"
          android:orientation="horizontal">

        <TextView
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:text="@string/packages" />

        <Spinner
            android:id="@+id/packages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="10sp"
          android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price" />

        <EditText
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:drawablePadding="10dp"
            android:editable="false"
            android:ems="10" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="10sp"
          android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/secondary_password" />

        <EditText
            android:id="@+id/secondary_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="@string/secondary_password"
            android:background="@drawable/edit_text"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="@string/secondary_password"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:textColorHint="@color/Dark"
            tools:ignore="LabelFor" />

      </LinearLayout>

      <Button
          android:id="@+id/upgradeBtn"
          android:layout_width="match_parent"
          android:layout_height="30sp"
          android:layout_marginTop="10sp"
          android:background="@drawable/button"
          android:text="@string/upgrade"
          android:textColor="@color/White" />

    </LinearLayout>

    <ImageView
        android:id="@+id/closeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/card2"
        android:contentDescription="@string/icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"/>

  </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>