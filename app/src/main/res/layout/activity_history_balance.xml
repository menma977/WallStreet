<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.history.HistoryBalanceActivity"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="20dp"
    tools:layout_editor_absoluteY="81dp">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/card2"
      android:padding="5dp"
      android:orientation="horizontal">

    <Button
        android:text="In"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:id="@+id/buttonIn"
        android:layout_weight="1"
        android:background="@drawable/button"
        android:layout_margin="5dp"
        tools:ignore="ButtonStyle"/>

    <Button
        android:text="Out"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:id="@+id/buttonOut"
        android:layout_weight="1"
        android:background="@drawable/button"
        android:layout_margin="5dp"
        tools:ignore="ButtonStyle"/>


  </LinearLayout>

  <Space
      android:layout_width="match_parent"
      android:layout_height="10dp"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/card2"
      android:padding="5dp"
      android:orientation="horizontal">

    <Button
        android:text="Internal"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:id="@+id/buttonInternal"
        android:layout_weight="1"
        android:background="@drawable/button"
        android:layout_margin="5dp"
        tools:ignore="ButtonStyle"
        android:enabled="false"/>

    <Button
        android:text="External"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:id="@+id/buttonExternal"
        android:layout_weight="1"
        android:background="@drawable/button"
        android:layout_margin="5dp"
        tools:ignore="ButtonStyle"
        android:enabled="false"/>


  </LinearLayout>

  <Space
      android:layout_width="match_parent"
      android:layout_height="20dp"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/card2"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:padding="10sp">

    <ImageView
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:contentDescription="@string/icon"
        app:srcCompat="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15sp"
        android:text="@android:string/untitled"
        android:textSize="24sp"
        android:textStyle="bold"/>

  </LinearLayout>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_marginTop="10dp"
      android:layout_weight="1"
      android:background="@drawable/card2"
      android:padding="10dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lists_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

  </ScrollView>

  <Space
      android:layout_width="match_parent"
      android:layout_height="10dp"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <Button
        android:id="@+id/buttonCamelHistory"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@drawable/button"
        android:text="@string/camel" />

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <Button
        android:text="Next"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:id="@+id/buttonNext"
        android:layout_weight="1"
        android:background="@drawable/button"
        android:enabled="false"/>

  </LinearLayout>

</LinearLayout>